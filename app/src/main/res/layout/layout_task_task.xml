<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout_task_task__TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="업무 목록" />

        <ImageButton
            android:id="@+id/layout_task_task__set_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/common_button_ripple"
            android:src="@drawable/design_filter_icon"
            app:tint="@color/app_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_task_task__SEARCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_task_task__TITLE"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/layout_task_task__search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/common_search_background"
            android:drawableStart="@drawable/common_search_icon"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:hint="검색" />

        <ImageButton
            android:id="@+id/layout_task_task__clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/layout_task_task__search"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/common_search_clear_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_task_task__list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_task_task__SEARCH"
        android:scrollbars="vertical"
        tools:listitem="@layout/adapter_task_employee" />

</RelativeLayout>