<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingVertical="10dp">

    <CheckBox
        android:id="@+id/adapter_employee_group_create_unselected__checkbox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/common_check_background"
        android:button="@null" />

    <ImageView
        android:id="@+id/adapter_employee_group_create_unselected__image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/adapter_employee_group_create_unselected__checkbox"
        android:layout_marginEnd="10dp"
        android:src="@drawable/image_default_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/adapter_employee_group_create_unselected__image"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/adapter_employee_group_create_unselected__name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="이름" />

        <TextView
            android:id="@+id/adapter_employee_group_create_unselected__company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="회사" />

    </LinearLayout>

    <TextView
        android:id="@+id/adapter_employee_group_create_unselected__contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/common_contact_number_background"
        android:textColor="@color/light_black"
        android:textSize="13sp"
        android:text="010-0000-0000" />

</RelativeLayout>