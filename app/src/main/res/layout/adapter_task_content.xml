<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingHorizontal="15dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/adapter_task_content__content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/adapter_task_content__request"
        android:layout_marginEnd="10dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/adapter_task_content__content_background"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="내용 (첫번째 줄)\n추가 내용 (두번째 줄)" />

    <Button
        android:id="@+id/adapter_task_content__request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@drawable/common_button_background"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="주세요" />

</RelativeLayout>