<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingHorizontal="15dp">

    <LinearLayout
        android:id="@+id/adapter_task_content__DESCRIPTION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/adapter_task_content__description_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_task_content__content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="내용" />

        <TextView
            android:id="@+id/adapter_task_content__date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            android:text="2023.09.11 14:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_task_content__DESCRIPTION"
        android:orientation="horizontal">

        <Button
            android:id="@+id/adapter_task_content__request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:paddingVertical="6dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/common_ripple_round_rectangle"
            android:foreground="@drawable/adapter_task_content__button_background"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="주세요" />

        <Button
            android:id="@+id/adapter_task_content__move_to_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:paddingVertical="6dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/common_ripple_round_rectangle"
            android:foreground="@drawable/adapter_task_content__button_background"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="채팅방으로 이동" />

    </LinearLayout>

</RelativeLayout>