<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_employee_group__layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="@drawable/common_round_layout">

    <RelativeLayout
        android:id="@+id/layout_employee_group__TOP_BAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="그룹 인원 선택" />

        <TextView
            android:id="@+id/layout_employee_group__create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/common_ripple_round_rectangle"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="생성" />

    </RelativeLayout>

</RelativeLayout>