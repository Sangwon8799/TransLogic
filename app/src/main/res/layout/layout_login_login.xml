<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="60dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/image_translogic_icon" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/image_translogic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="아이디" />

    <EditText
        android:id="@+id/layout_login_login__username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:hint="아이디 입력" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="비밀번호" />

    <EditText
        android:id="@+id/layout_login_login__password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="18sp"
        android:hint="비밀번호 입력" />

    <TextView
        android:id="@+id/layout_login_login__find_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="60dp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/common_button_ripple"
        android:clickable="true"
        android:focusable="false"
        android:textSize="14sp"
        android:text="아이디/비밀번호 찾기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/layout_login_login__auto_login"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:paddingVertical="5dp"
                android:background="@drawable/common_check_background"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deep_gray"
                android:textSize="16sp"
                android:text="자동 로그인" />

        </LinearLayout>

        <Button
            android:id="@+id/layout_login_login__login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:layout_marginVertical="15dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/layout_login_login__login_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="로그인" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:textColor="@color/deep_gray"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="계정이 없다면? " />

            <TextView
                android:id="@+id/layout_login_login__signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/common_button_ripple"
                android:clickable="true"
                android:focusable="false"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="회원가입 하러가기" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>