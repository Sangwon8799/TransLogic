<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_employee_group__layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/common_round_layout">

    <RelativeLayout
        android:id="@+id/layout_employee_group_selection__TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="그룹 인원 선택" />

        <TextView
            android:id="@+id/layout_employee_group_selection__set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/common_button_ripple"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="그룹명 설정" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_employee_group_selection__selected"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/layout_employee_group_selection__TITLE"
        android:layout_marginVertical="5dp"
        android:scrollbars="horizontal"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:orientation="horizontal"
        tools:listitem="@layout/adapter_employee_group_selected" />

    <EditText
        android:id="@+id/layout_employee_group_selection__search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_employee_group_selection__selected"
        android:layout_marginBottom="10dp"
        android:background="@drawable/common_search_background"
        android:drawableStart="@drawable/common_search_icon"
        android:drawablePadding="8dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="검색" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_employee_group_selection__unselected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_employee_group_selection__search"
        android:scrollbars="vertical"
        tools:listitem="@layout/adapter_employee_group_unselected" />

</RelativeLayout>