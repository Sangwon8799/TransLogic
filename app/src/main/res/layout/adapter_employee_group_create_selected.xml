<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/adapter_employee_group_create_selected__image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/common_image_background"
        android:src="@drawable/image_default_image" />

    <ImageButton
        android:id="@+id/adapter_employee_group_create_selected__remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/design_remove_icon" />

    <TextView
        android:id="@+id/adapter_employee_group_create_selected__name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_employee_group_create_selected__image"
        android:paddingHorizontal="10dp"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="이름" />

</RelativeLayout>