<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/adapter_task_user__USER"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/common_ripple_rectangle"
        android:foreground="@drawable/adapter_task_user__user_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/adapter_task_user__image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/common_default_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/adapter_task_user__image"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_task_user__name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="이름" />

            <TextView
                android:id="@+id/adapter_task_user__company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="회사명" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adapter_task_user__content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/adapter_task_user__USER"
        tools:listitem="@layout/adapter_task_content" />

</RelativeLayout>