<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingVertical="10dp"
    android:paddingHorizontal="15dp"
    android:background="@drawable/common_ripple_rectangle"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/adapter_chat_chat__image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/common_default_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/adapter_chat_chat__image"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/adapter_chat_chat__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="채팅방 제목" />

        <TextView
            android:id="@+id/adapter_chat_chat__content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="마지막으로 입력된 내용" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/adapter_chat_chat__time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            android:text="오후 2:00" />

        <TextView
            android:id="@+id/adapter_chat_chat__unread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingHorizontal="6dp"
            android:background="@drawable/adapter_chat_chat__unread_count_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="10" />

    </LinearLayout>

</RelativeLayout>