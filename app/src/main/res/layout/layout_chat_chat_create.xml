<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingHorizontal="20dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/common_bottom_sheet_background">

    <RelativeLayout
        android:id="@+id/layout_chat_chat_create__TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="채팅 인원 선택" />

        <TextView
            android:id="@+id/layout_chat_chat_create__create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/common_button_ripple"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="생성" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_chat_chat_create__SEARCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_chat_chat_create__TITLE"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/layout_chat_chat_create__search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_search_background"
            android:drawableStart="@drawable/common_search_icon"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:hint="검색" />

        <ImageButton
            android:id="@+id/layout_chat_chat_create__clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/layout_chat_chat_create__search"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/common_search_clear_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_chat_chat_create__selected"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/layout_chat_chat_create__SEARCH"
        android:layout_marginVertical="5dp"
        android:scrollbars="horizontal"
        android:visibility="gone"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:orientation="horizontal"
        tools:listitem="@layout/adapter_employee_group_create_selected" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_chat_chat_create__unselected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_chat_chat_create__selected"
        android:scrollbars="vertical"
        tools:listitem="@layout/adapter_employee_group_create_unselected" />

</RelativeLayout>